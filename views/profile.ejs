<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script
      src="https://kit.fontawesome.com/97e80ba977.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./style.css" />
</head>
<body>
    
    <div class="navbar">
        <div>
            <i class="fas fa-phone-alt"></i>
        </div>

        <h2>
            <strong>  Welcome, </strong>
            <strong id="main-name-title"><%= user.name %> </strong>
        </h2>
        
        <form action="/logout" method="get">
            <button class = "logout-btn"> <strong> Log Out </strong> </button>
        </form>
    </div>

    
    <div class="body-con">
        <div class="left">
            <div class="title-box">
                <h2>Friends</h2>
            </div>
    
            <ul>
                <% for (let i of names){ %>
                    <%if(i.name != user.name) {%>
                        <li class = "my-list">
                            <i class="fas fa-user-circle"></i>
                            <!-- **************** -->
                            <h2 class = "name-size">
                                
                                <%= i.name %>
                            </h2>
                        </li>
                    <%}%>
                
                <% } %>
            </ul>
        </div>

        <div class="right">
            <div class="name-title">
                <i class="fas fa-mobile-alt"></i>
                <h4 id = "my-name"> Chatting with..... </h4>
                <!-- ************* -->
            </div>

            <div class="chatarea"> </div>

            <div class="text-area">
                <textarea name="" id="text-area" cols="30" rows="1" placeholder= "Write a message..."></textarea>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
    <script src = "https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        
        console.log("Hey new console")
        let friend = document.querySelectorAll('.my-list');
        let chatTitle = document.getElementById("my-name");
        let fName = document.querySelectorAll('.name-size');

        for (let i of friend){
            i.addEventListener('click', () => {
                    chatTitle.innerText = i.innerText;
            })
        }
       
    </script>
</body>
</html>